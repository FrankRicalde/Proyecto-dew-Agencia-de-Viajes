@model IEnumerable<AgenciaDeViajes.Models.GestionPaquete>


<!-- Page Features -->

        @foreach (var r in Model)
        {

            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="http://placehold.it/800x500" alt="@r.nombPaquete" class="img-rounded img-responsive">
                    <div class="caption">
                        <h3>@r.nombPaquete</h3>
                        <p style="height:70px;" >@r.infoPaquete</p>
                        <p>
                            <a href="@Url.Action("Buscar", "Clientes", new { id = r.idPaquete })" class="btn btn-primary">Compre ahora!</a>

                            <!-- <a href="#" class="btn btn-default">More Info</a> -->
                        </p>
                    </div>
                </div>
            </div>
        }
  
            


 
<!-- /.row -->