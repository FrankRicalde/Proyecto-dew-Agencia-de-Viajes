    <script>

             $(function(){
                 $('.datepicker').datepicker({

                     format: 'yyyy-mm-dd',
                     startDate: '-3d',

                     autoclose: true,
                     endDate: '+0d'

                 });

                 $('#fechasalida').on('changeDate', function(ev){
                     $(this).datepicker('hide');
                 });

                 $('#fecharetorno').on('changeDate', function(ev){
                     $(this).datepicker('hide');
                 });


                 function today(){
                     var d = new Date();
                     var curr_date = d.getDate();
                     var curr_month = d.getMonth() + 1;
                     var curr_year = d.getFullYear();

                     document.miform.tdci.value=curr_year+ "-" + curr_month + "-" +curr_date  ;
                     document.miform.tdcf.value=curr_year+ "-" + curr_month + "-" +curr_date  ;
                 }

             });
    </script>
